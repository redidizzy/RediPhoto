<h1>Images</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.user.email %></td>
        <td><%= link_to 'Show', image, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_image_path(image), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

